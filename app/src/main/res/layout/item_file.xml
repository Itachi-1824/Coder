<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Indentation for nested files -->
    <Space
        android:id="@+id/indentation"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <!-- File/Folder Icon -->
    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_code_24"
        app:tint="?attr/colorOnSurfaceVariant"
        tools:src="@drawable/ic_folder_24" />

    <!-- File Name -->
    <TextView
        android:id="@+id/file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        tools:text="MainActivity.kt" />

    <!-- Expand/Collapse indicator for folders -->
    <ImageView
        android:id="@+id/expand_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_expand_more_24"
        android:visibility="gone"
        app:tint="?attr/colorOnSurfaceVariant" />

</LinearLayout>
